{
  "name": "oracle-helpers",
  "version": "3.4.4",
  "description": "A collection of helpers for alleviating boilerplate in OracleDB projects",
  "main": "build/main/index.js",
  "typings": "build/main/index.d.ts",
  "module": "build/module/index.js",
  "type": "module",
  "exports": {
    ".": {
      "import": "./build/module/index.js",
      "require": "./build/main/index.js"
    },
    "./sql": {
      "import": "./build/module/lib/sql.js",
      "require": "./build/main/lib/sql.js"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/abbvie-external/oracle-helpers.git"
  },
  "license": "MIT",
  "keywords": [],
  "scripts": {
    "build": "run-p build:*",
    "build:main": "tsc -p tsconfig.cjs.json &&  echo '{\"type\": \"commonjs\"}' > ./build/main/package.json",
    "build:module": "tsc -p tsconfig.json",
    "fix": "run-s fix:*",
    "fix:prettier": "prettier \"src/**/*.ts\" --write",
    "fix:lint": "eslint src --ext .ts --fix",
    "test": "run-p test:*",
    "test:lint": "eslint src --ext .ts",
    "test:prettier": "prettier \"src/**/*.ts\" --list-different",
    "test:spelling": "cspell \"{README.md,.github/*.md,src/**/*.ts}\"",
    "test:unit": "node --import=tsx --test src/tests/**/*.spec.ts",
    "watch:build": "tsc -p tsconfig.json -w",
    "watch:test": "node --import=tsx --watch --test src/tests/**/*.spec.ts",
    "doc": "run-s doc:html && open-cli build/docs/index.html",
    "doc:html": "typedoc src/ --exclude **/*.spec.ts --out build/docs",
    "doc:json": "typedoc src/ --exclude **/*.spec.ts --json build/docs/typedoc.json",
    "doc:publish": "gh-pages -m \"[ci skip] Updates\" -d build/docs",
    "version": "standard-version",
    "reset-hard": "git clean -dfx && git reset --hard && npm i",
    "prepare-release": "run-s test doc:html build version doc:publish"
  },
  "engines": {
    "node": ">=10"
  },
  "devDependencies": {
    "@types/node": "^24.10.3",
    "@types/oracledb": "^6.2.0",
    "@typescript-eslint/eslint-plugin": "^6.3.0",
    "@typescript-eslint/parser": "^6.3.0",
    "cspell": "^6.31.3",
    "cz-conventional-changelog": "^3.3.0",
    "dotenv": "^16.0.1",
    "dotenv-expand": "^10.0.0",
    "eslint": "^8.15.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-import": "^2.24.0",
    "gh-pages": "^5.0.0",
    "npm-run-all": "^4.1.5",
    "open-cli": "^7.0.1",
    "oracledb": "^6.3.0",
    "prettier": "^3.0.1",
    "standard-version": "^9.3.1",
    "tsx": "^4.21.0",
    "typedoc": "^0.24.8",
    "typescript": "^5.1.6"
  },
  "peerDependencies": {
    "oracledb": ">=5.1.0 <7"
  },
  "files": [
    "build/main",
    "build/module",
    "!**/*.spec.*",
    "!**/*.json",
    "build/main/package.json",
    "CHANGELOG.md",
    "LICENSE",
    "README.md"
  ],
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "ava": {
    "extensions": {
      "ts": "module"
    },
    "nodeArguments": [
      "--import=tsx",
      "--enable-source-maps"
    ],
    "timeout": "10s",
    "files": [
      "**/*.spec.ts"
    ],
    "workerThreads": false
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "all",
    "endOfLine": "auto"
  }
}
